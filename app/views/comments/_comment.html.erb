<div class="bg-white shadow overflow-hidden sm:rounded-lg p-6 mb-8">
            <h2 class="text-2xl font-bold mb-4">Comments</h2>
            <% @article.comments.each do |comment| %>
                <% unless comment.archived? %>
                    <div class="mb-4 p-4 bg-gray-50 rounded-lg shadow">
                        <p class="text-gray-700"><strong>Commenter:</strong> <%= comment.commenter %></p>
                        <p class="text-gray-700"><strong>Comment:</strong> <%= comment.body %></p>
                        <p class="mt-2">
                            <%= link_to "Destroy Comment", [comment.article, comment], data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800" %>
                        </p>
                    </div>
                <% end %>
            <% end %>
        </div>