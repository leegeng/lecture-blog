<div class="bg-white shadow overflow-hidden sm:rounded-lg p-6">
    <h2 class="text-2xl font-bold mb-4">Add a comment:</h2>
            <%= form_with model: [ @article, @article.comments.build ] do |form| %>
                <div class="mb-4">
                    <%= form.label :commenter, class: "block text-gray-700 text-sm font-bold mb-2" %>
                    <% if @user %>
                        <%= form.text_field :commenter, value: @user["name"], class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                    <% else %>
                        <%= form.text_field :commenter, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                    <% end %>
                </div>
                <div class="mb-4">
                    <%= form.label :body, class: "block text-gray-700 text-sm font-bold mb-2" %>
                    <%= form.text_area :body, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                </div>
                <div class="mb-4">
                    <%= form.label :status, class: "block text-gray-700 text-sm font-bold mb-2" %>
                    <%= form.select :status, Visible::VALID_STATUSES, selected: 'public', class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
                </div>
                <div>
                    <%= form.submit class: "bg-blue-500 text-white px-4 py-2 rounded shadow hover:bg-blue-700" %>
                </div>
            <% end %>
        </div>